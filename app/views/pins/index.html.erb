<h1>Listing pins</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Users email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.description %></td>
        <td><%= pin.user.email %></td>
        <td><%= link_to 'Show', pin_path(pin) %> <br /></td>
         <% if pin.user  == current_user %>
           <td><%= link_to 'Edit', edit_pin_path(pin) %> <br /> </td>
           <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %><br /></td>
         <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Pin', new_pin_path %>
<% end %>
